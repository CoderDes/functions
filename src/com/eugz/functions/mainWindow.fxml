<?import javafx.collections.FXCollections?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.*?>
<?import java.lang.*?>
<BorderPane
    fx:controller="com.eugz.functions.Controller"
    xmlns:fx="http://javafx.com/fxml"
>
    <left>
        <HBox
            style="-fx-background-color: #bec4b1;"
            prefWidth="250"
        >
            <BorderPane>
                <top>
                    <BorderPane>
                        <top>
                            <Label
                                text="Settings"
                                alignment="CENTER"
                                style="-fx-font-family: Roboto; -fx-font-size: 20px;"
                            />
                        </top>
                        <center>
                            <ComboBox
                                fx:id="selectFunc"
                                onAction="#selectFuncHandler"
                            >
                                <value>
                                    <String fx:value="Linear function" />
                                </value>
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String fx:value="Linear function" />
                                        <String fx:value="Quadratic function" />
                                        <String fx:value="Cubic function" />
                                        <String fx:value="Power-law function" />
                                        <String fx:value="Exponential function" />
                                        <String fx:value="Sinus function" />
                                    </FXCollections>
                                </items>
                            </ComboBox>
                        </center>
                    </BorderPane>
                </top>
                <center>
                    <GridPane>
                        <GridPane fx:id="linearParams"
                            GridPane.rowIndex="0"
                            GridPane.columnIndex="0"
                        >
                            <Label text="k"
                               GridPane.rowIndex="0"
                               GridPane.columnIndex="0"
                            />
                            <TextField
                                GridPane.rowIndex="0"
                                GridPane.columnIndex="1"
                                fx:id="linearK"
                            />
                            <Label text="b"
                               GridPane.rowIndex="1"
                               GridPane.columnIndex="0"
                            />
                            <TextField
                                GridPane.rowIndex="1"
                                GridPane.columnIndex="1"
                                fx:id="linearB"
                            />
                        </GridPane>
                        <GridPane fx:id="quadraticParams"
                              GridPane.rowIndex="1"
                              GridPane.columnIndex="0"
                        >
                            <Label text="a"
                                GridPane.rowIndex="0"
                                GridPane.columnIndex="0"
                            />
                            <TextField
                                GridPane.rowIndex="0"
                                GridPane.columnIndex="1"
                                fx:id="quadraticA"
                            />
                            <Label text="b"
                                GridPane.rowIndex="1"
                                GridPane.columnIndex="0"
                            />
                            <TextField
                                GridPane.rowIndex="1"
                                GridPane.columnIndex="1"
                                fx:id="quadraticB"
                            />
                            <Label text="c"
                                GridPane.rowIndex="2"
                                GridPane.columnIndex="0"
                            />
                            <TextField
                                GridPane.rowIndex="2"
                                GridPane.columnIndex="1"
                                fx:id="quadraticC"
                            />
                        </GridPane>
                        <GridPane fx:id="cubicParams"
                              GridPane.rowIndex="2"
                              GridPane.columnIndex="0"
                        >
                            <Label text="a"
                                GridPane.rowIndex="0"
                                GridPane.columnIndex="0"
                            />
                            <TextField
                                GridPane.rowIndex="0"
                                GridPane.columnIndex="1"
                                fx:id="cubicA"
                            />
                            <Label text="b"
                               GridPane.rowIndex="1"
                               GridPane.columnIndex="0"
                            />
                            <TextField
                                GridPane.rowIndex="1"
                                GridPane.columnIndex="1"
                                fx:id="cubicB"
                            />
                            <Label text="c"
                               GridPane.rowIndex="2"
                               GridPane.columnIndex="0"
                            />
                            <TextField
                                GridPane.rowIndex="2"
                                GridPane.columnIndex="1"
                                fx:id="cubicC"
                            />
                            <Label text="d"
                               GridPane.rowIndex="3"
                               GridPane.columnIndex="0"
                            />
                            <TextField
                                GridPane.rowIndex="3"
                                GridPane.columnIndex="1"
                                fx:id="cubicD"
                            />
                        </GridPane>
                        <GridPane fx:id="powerLawParams"
                              GridPane.rowIndex="3"
                              GridPane.columnIndex="0"
                        >
                            <Label text="k"
                               GridPane.rowIndex="0"
                               GridPane.columnIndex="0"
                            />
                            <TextField
                                GridPane.rowIndex="0"
                                GridPane.columnIndex="1"
                                fx:id="powK"
                            />
                        </GridPane>
                        <GridPane fx:id="expoParams"
                              GridPane.rowIndex="3"
                              GridPane.columnIndex="0"
                        >
                            <Label text="x"
                               GridPane.rowIndex="0"
                               GridPane.columnIndex="0"
                            />
                            <TextField
                                GridPane.rowIndex="0"
                                GridPane.columnIndex="1"
                                fx:id="expoX"
                            />
                        </GridPane>
                        <GridPane fx:id="sinusParams"
                              GridPane.rowIndex="4"
                              GridPane.columnIndex="0"
                        >
                            <Label text="a"
                               GridPane.rowIndex="0"
                               GridPane.columnIndex="0"
                            />
                            <TextField
                                GridPane.rowIndex="0"
                                GridPane.columnIndex="1"
                                fx:id="sinA"
                            />
                            <Label text="k"
                               GridPane.rowIndex="1"
                               GridPane.columnIndex="0"
                            />
                            <TextField
                                GridPane.rowIndex="1"
                                GridPane.columnIndex="1"
                                fx:id="sinK"
                            />
                        </GridPane>
                        <Label
                            GridPane.rowIndex="5"
                            GridPane.columnIndex="0"
                            text="function representation:"
                        />
                        <Label
                            GridPane.rowIndex="6"
                            GridPane.columnIndex="0"
                            fx:id="stringFuncRepresentation"
                        />
                    </GridPane>
                </center>
                <bottom>
                    <GridPane>
                        <Button
                            GridPane.rowIndex="0"
                            GridPane.columnIndex="0"
                            text="Render"
                            onMouseClicked="#handleRenderClick"
                        />
                        <Button
                            GridPane.rowIndex="0"
                            GridPane.columnIndex="1"
                            fx:id="clear"
                            text="Clear"
                            onMouseClicked="#handleClearClick"
                        />
                    </GridPane>
                </bottom>
            </BorderPane>
        </HBox>
    </left>
    <center>
        <BorderPane>
            <top>
                <Label
                    BorderPane.alignment="CENTER"
                    text="Graphic"
                    style="-fx-font-family: Roboto; -fx-font-size: 20px;"
                />
            </top>
            <center>
                <LineChart
                    BorderPane.alignment="CENTER"
                    fx:id="lineGraph"
                    createSymbols="false"
                    legendVisible="false"
                    prefHeight="500.0"
                    prefWidth="800.0"
                >
                    <xAxis>
                        <NumberAxis
                            autoRanging="false"
                            lowerBound="-100"
                            side="BOTTOM"
                            tickUnit="1"
                            upperBound="100"
                        />
                    </xAxis>
                    <yAxis>
                        <NumberAxis
                            autoRanging="false"
                            lowerBound="-100"
                            side="LEFT"
                            tickUnit="1"
                            upperBound="100"
                        />
                    </yAxis>
                    <cursor>
                        <Cursor fx:constant="CROSSHAIR" />
                    </cursor>
                </LineChart>
            </center>
        </BorderPane>
    </center>
</BorderPane>